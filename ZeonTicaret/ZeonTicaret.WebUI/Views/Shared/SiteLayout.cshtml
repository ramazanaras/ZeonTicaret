                </ul>

            </div>
            <div class="header-middle-info">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="index.html">
                            <img src="/Content/Zeon/images/elements/logo.png" alt="site logo" />
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <ul class="header-middle-account">
                        <li><a href="/Kullanici/Hesabim"><i class="icon-330" title="My account"></i> Hesabım</a></li>
                        @if (User.Identity.IsAuthenticated) //giriş yapmmışsa
                        {
                            <li><a href="/Kullanici/CikisYap"><i class="icon-351" title="Login"></i> Çıkış yap</a></li>
                        }
                        else
                        {
                            <li><a href="/Kullanici/GirisYap"><i class="icon-351" title="Login"></i> Giriş yap</a></li>
                        }



                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="menu">
                <div class="search-cart">
                    <form class="search">
                        <input type="text" class="search-line" placeholder="Ara" name="serch" />
                        <input type="submit" value="" class="search-button" />
                    </form>
                    @{
                        //partial view
                        Html.RenderAction("MiniSepetWidget", "Home");   //partial view'i çağırıyoruz.Home controllerdaki MiniSepet actionına gidicek.o da bize MiniSepetWidget.cshtml partial view'i ni buraya basar.

                    }

                    







                    <div class="clear"></div>
                </div>
                <div class="repsonsive-menu"><i class="icon-406" title="406"></i> Menu</div>
                <ul>
                    <li class="menu-item-has-children active">
