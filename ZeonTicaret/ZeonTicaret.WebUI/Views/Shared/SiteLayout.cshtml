                            <li><a href="/Home/Hakkimizda">Hakkımızda</a></li>
                            <li><a href="/Kullanici/KayitOl">Kayıt Ol</a></li>

                        </ul>
                    </li>
                    <li><a href="/Home/Iletisim">İletişim</a></li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>

    <div class="content">
       
        @*=================== PARTIAL VIEWLER=============== *@

        @{
            //partial view
            Html.RenderAction("Slider","Home");//Home controllerdaki Slider actionına git
        }

      
        

        
        @RenderBody()
     

       



        @{
            
            //partial view
            Html.RenderAction("Markalar","Home");
