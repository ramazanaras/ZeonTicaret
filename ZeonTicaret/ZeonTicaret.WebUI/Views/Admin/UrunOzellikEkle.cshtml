
@{
    ViewBag.Title = "Urun Ozellik Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@model IEnumerable<ZeonTicaret.WebUI.Models.Urun>



@* AdminLayoutta RenderSection(head) diye tanımlamıştık burda oraya değer atıyoruz. *@
