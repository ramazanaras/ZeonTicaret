@{
    ViewBag.Title = "MarkaEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<br />
<br />
<br />

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Marka Ekle
            </header>
            <div class="panel-body">
                <br />
                @* resim için  enctype="multipart/form-data" yazmalıyız*@
                <form class="form-horizontal tasi-form" method="post" action="/Admin/MarkaEkle" enctype="multipart/form-data" >
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Marka Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama">
                            <span class="help-block">A block of help text that breaks onto a new line and may extend beyond one line.</span>
                        </div>
                    </div>
                 

                    <div class="form-group">
                        <label class="control-label col-md-3">Marka Resmi</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim SEc</span>
                                   
                                    <input type="file" class="default" name="fileUpload"/>
                                </span>
                               
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>


                    
                </form>
            </div>
        </section>
     
    </div>
</div>